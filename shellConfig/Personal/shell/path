# vim: ft=sh

[ -d "$HOME/go" ] && export GOPATH="$HOME/go"
[ -d "$HOME/.bun" ] && export BUN_INSTALL="$HOME/.bun"
[ -s "/home/k4r7ik/.bun/_bun" ] && source "/home/k4r7ik/.bun/_bun"

pathList=(
  "$GOPATH/bin"
  "$HOME/.npm/bin"
  "$HOME/.npm-global/bin"
  "$HOME/.local/bin"
  "$HOME/Personal/bin/"
  "$BUN_INSTALL/bin"
  "$HOME/.cargo/bin"
)

for i in "${pathList[@]}"
do
  if [ -d $i ] && [[ ":$PATH:" != *":$i:"* ]]; then
    export PATH="${PATH:+"$PATH:"}$i"
  fi
done
